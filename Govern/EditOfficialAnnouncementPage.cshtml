@{
    Layout = "_Admin.cshtml";
    Login AdminLogin = new Login();
    int reqLangID = 0;
    if (Request.QueryString["Lang"] != null)
    {
        reqLangID = Request.QueryString["Lang"].AsInt();
    }
    MvcXmlEntities ConnXml = new MvcXmlEntities();
    Setting Setting = ConnXml.Setting.FirstOrDefault();
    #region Değişkenler
    var txtTitle = "";
    var txtBody = "";
    var drpLang = reqLangID.ToString();
    var drpPageStatus = true;
    var fuImageUrl = "";
    var txtDate = "";
    var btnName = "Kaydet";
    var txtPageTitle = "Yeni Resmi Duyuru Ekle";
    var drpOfficialAnnouncementCategoryID = 0;
    #endregion
    if (Request.QueryString["Delete"].IsInt())
    {
        int reqID = Request.QueryString["Delete"].AsInt();
        OfficialAnnouncement Pages = ConnXml.OfficialAnnouncement.FirstOrDefault(x => x.OfficialAnnouncementID == reqID);
        string imgDir = "~/" + Setting.Documentdir + "/OfficialAnnouncement/" + Pages.ImageUrl;
        if (System.IO.File.Exists(Server.MapPath(imgDir)) && !Pages.ImageUrl.IsEmpty())
        {
            System.IO.File.Delete(Server.MapPath(imgDir));
        }
        ConnXml.Entry(Pages).State = System.Data.EntityState.Deleted;
        int ConnStatus = 0;
        ConnStatus = ConnXml.SaveChanges();
        if (ConnStatus > 0)
        {
            Session["Ok"] = "İşlem başarı ile gerçekleşmiştir.";
        }
        else
        {
            Session["Error"] = "Bir problem oldu yönetici ile görüşün.";
        }
        Response.Redirect("OfficialAnnouncementPage?Lang=" + reqLangID);
    }
    if (Request.QueryString["ID"].IsInt() || Request.QueryString["Reference"].IsInt() || Request.QueryString["HistoryID"].IsInt())
    {
        int reqID = (Request.QueryString["ID"].AsInt() != 0 ? Request.QueryString["ID"].AsInt() : Request.QueryString["Reference"].AsInt());
        int historyID = (Request.QueryString["HistoryID"].AsInt());
        OfficialAnnouncement reqPage = new OfficialAnnouncement();
        if (reqID > 0)
        {
            reqPage = ConnXml.OfficialAnnouncement.FirstOrDefault(x => x.OfficialAnnouncementID == reqID);
        }
        else if (historyID > 0)
        {
            reqPage = ConnXml.OfficialAnnouncementHistory.FirstOrDefault(x => x.OfficialAnnouncementHistoryID == historyID).Cast<OfficialAnnouncement>();
            btnName = "Geçmişe Dön";
            txtPageTitle = reqPage.Title + " adlı menü'nün " + reqPage.ModifiedDate + " tarihinde kaydedilen versiyonu. (Geçmişe dönmeden düzenleme yapamazsınız)";
        }
        if (!reqPage.ImageUrl.IsEmpty())
        {
            string imgDir = "~/" + Setting.Documentdir + "/OfficialAnnouncement/" + reqPage.ImageUrl;
            if (System.IO.File.Exists(Server.MapPath(imgDir)))
            {
                fuImageUrl = "<div class=\"Input\"><span>(<a href='" + imgDir.Replace("~/", "../") + "' target='_blank'>Mevcut dosya</a> - <a class='DeleteFile' rel='" + reqPage.OfficialAnnouncementID + "'  type='OfficialAnnouncementImageUrl' href='javascript:void(0)' target='_blank'>Dosyayı sil</a>)</span></div>";
            }
        }
        txtTitle = reqPage.Title;
        txtBody = reqPage.Body;
        drpPageStatus = reqPage.Status;
        txtDate = reqPage.Date.ToString("dd/MM/yyyy").Replace(".", "/");
        drpLang = reqPage.Lang.ToString();
        drpOfficialAnnouncementCategoryID = reqPage.OfficialAnnouncementCategoryID;
    }
    if (IsPost)
    {
        if (!AdminLogin.IsLogin())
        {
            Response.Redirect(Shared.PageBasePath() + "Govern/Login");
        }
        // AntiForgery.Validate();
        OfficialAnnouncement OfficialAnnouncement = new OfficialAnnouncement();
        OfficialAnnouncementHistory backup = new OfficialAnnouncementHistory();
        if (Request.QueryString["ID"].IsInt() || Request.QueryString["Reference"].IsInt() || Request.QueryString["HistoryID"].IsInt())
        {
            int reqID = (Request.QueryString["ID"].AsInt() != 0 ? Request.QueryString["ID"].AsInt() : Request.QueryString["Reference"].AsInt());
            int historyID = (Request.QueryString["HistoryID"].AsInt());
            if (reqID > 0)
            {
                OfficialAnnouncement = ConnXml.OfficialAnnouncement.FirstOrDefault(x => x.OfficialAnnouncementID == reqID);
                backup = OfficialAnnouncement.Cast<OfficialAnnouncementHistory>();
            }
            else if (historyID > 0)
            {
                OfficialAnnouncement = ConnXml.OfficialAnnouncementHistory.FirstOrDefault(x => x.OfficialAnnouncementHistoryID == historyID).Cast<OfficialAnnouncement>();
                backup = OfficialAnnouncement.Cast<OfficialAnnouncementHistory>();
            }
            OfficialAnnouncement.ModifiedDate = DateTime.Now;
            OfficialAnnouncement.ModifiedId = AdminLogin.LoginUserID();
            backup.ModifiedId = AdminLogin.LoginUserID();
        }
        else
        {
            OfficialAnnouncement.CreatedDate = DateTime.Now;
            OfficialAnnouncement.ModifiedDate = DateTime.Now;
            OfficialAnnouncement.CreatedId = AdminLogin.LoginUserID();
            OfficialAnnouncement.ImageUrl = "";
        }
        OfficialAnnouncement.Title = Request.Form["txtTitle"];
        OfficialAnnouncement.Body = Request.Unvalidated().Form["txtBody"];
        if (Request.Files.Count > 0)
        {
            var uploadedFile = Request.Files["fuImageUrl"];
            if (uploadedFile.ContentLength > 0)
            {
                if (!OfficialAnnouncement.ImageUrl.IsEmpty())
                {
                    string imgDir = "~/" + Setting.Documentdir + "/OfficialAnnouncement/" + OfficialAnnouncement.ImageUrl;
                    System.IO.File.Delete(Server.MapPath(imgDir));
                }
                string getExtentions = Path.GetExtension(uploadedFile.FileName);
                string newFileName = System.Guid.NewGuid().ToString() + getExtentions;
                var fileSavePath = Server.MapPath("~/" + Setting.Documentdir + "/OfficialAnnouncement/" + newFileName);
                uploadedFile.SaveAs(fileSavePath);
                OfficialAnnouncement.ImageUrl = newFileName;
            }
        }
        OfficialAnnouncement.Lang = Request.Form["drpLang"].AsInt();
        OfficialAnnouncement.Status = (Request.Form["drpPageStatus"] == "1" ? true : false);
        OfficialAnnouncement.OfficialAnnouncementCategoryID = Request.Form["drpOfficialAnnouncementCategoryID"].AsInt();
        if (Request.Form["txtDate"].ToString().IsEmpty())
        {
            OfficialAnnouncement.Date = DateTime.Now;
        }
        else
        {
            string strDate = Request.Form["txtDate"].ToString();
            DateTime getDate = new DateTime(strDate.Substring(6, 4).AsInt(), strDate.Substring(3, 2).AsInt(), strDate.Substring(0, 2).AsInt());
            OfficialAnnouncement.Date = getDate;
        }
        int ConnStatus = 0;
        if (Request.QueryString["ID"].IsInt() || Request.QueryString["HistoryID"].IsInt())
        {
            ConnXml.Entry(OfficialAnnouncement).State = System.Data.EntityState.Modified;
            ConnStatus = ConnXml.SaveChanges();
        }
        else
        {
            ConnXml.OfficialAnnouncement.Add(OfficialAnnouncement);
            ConnStatus = ConnXml.SaveChanges();
            backup = OfficialAnnouncement.Cast<OfficialAnnouncementHistory>();
            //OfficialAnnouncement reqPageUpdate = ConnXml.OfficialAnnouncement.FirstOrDefault(x => x.OfficialAnnouncementID == OfficialAnnouncement.OfficialAnnouncementID);
            //int getOfficialAnnouncementID = ConnXml.Pages.Where(x => x.ModuleID == 6 && x.Lang == reqPageUpdate.Lang).FirstOrDefault().PageID;
            //reqPageUpdate.LinkUrl = "Page/"+ getOfficialAnnouncementID + "/" + OfficialAnnouncement.OfficialAnnouncementID + "?lang=" + reqPageUpdate.Lang;
            //ConnXml.Entry(reqPageUpdate).State = System.Data.EntityState.Modified;
            //ConnStatus = ConnXml.SaveChanges();
        }
        if (ConnStatus > 0)
        {
            backup.HistoryCreateDate = DateTime.Now;
            Session["Ok"] = "İşlem başarı ile gerçekleşmiştir.";
            ConnXml.OfficialAnnouncementHistory.Add(backup);
            ConnStatus = ConnXml.SaveChanges();
        }
        else
        {
            Session["Error"] = "Bir problem oldu yönetici ile görüşün.";
        }
        Response.Redirect("OfficialAnnouncementPage?Lang=" + reqLangID);
    }
}
<div class="Title">@Html.Raw(txtPageTitle)</div>
<form method="post" enctype="multipart/form-data">
    @AntiForgery.GetHtml()
    @* If at least one validation error exists, notify the user *@
    @Html.ValidationSummary("Account creation was unsuccessful. Please correct the errors and try again.", excludeFieldErrors: true, htmlAttributes: null)
    <div id="EditPageContent">
        <div class="Content">
            <div class="Item">
                @{
                    List<SelectListItem> lstForm = new List<SelectListItem>();
                    lstForm.Add(new SelectListItem { Value = "0", Text = "Resmi Duyuru Kategorisi Seçiniz" });
                    lstForm.AddRange(ConnXml.OfficialAnnouncementCategory.Where(x => x.Lang == reqLangID).ToList().Select(x => new SelectListItem { Value = x.OfficialAnnouncementCategoryID.ToString(), Text = x.Title, Selected = (x.OfficialAnnouncementCategoryID == drpOfficialAnnouncementCategoryID ? true : false) }));
                    IEnumerable<SelectListItem> drpFormsItem = lstForm;
                    if (drpFormsItem.Any(x => x.Value == drpOfficialAnnouncementCategoryID.ToString()))
                    {
                        drpFormsItem.FirstOrDefault(x => x.Value == drpOfficialAnnouncementCategoryID.ToString()).Selected = true;
                    }
                }
                @HelperAdminControl.DropDownList("drpOfficialAnnouncementCategoryID", "Kategori", drpFormsItem)
                @HelperAdminControl.inputText("txtTitle", "Duyuru Adı", false, true, txtTitle)
                @*@HelperAdminControl.inputEditor("txtBody", "Duyuru İçeriği", txtBody)*@
                @HelperAdminControl.fileUpload("fuImageUrl", "Dosya")
                @Html.Raw(fuImageUrl)
                @HelperAdminControl.inputText("txtDate", "Tarih", false, false, txtDate, "Date")
                @{
                    List<SelectListItem> lstLang = new List<SelectListItem>();
                    for (int i = 0; i < Shared.Lang.Length; i++)
                    {
                        lstLang.Add(new SelectListItem { Value = i.ToString(), Text = Shared.toLang(i) });
                    }
                    lstLang.FirstOrDefault(x => x.Value == drpLang).Selected = true;
                    IEnumerable<SelectListItem> drpLangItems = lstLang;
                }
                @HelperAdminControl.DropDownList("drpLang", "Dil", drpLangItems)
                <div class="Title">Durum</div>
                <div class="Input">
                    @{
                        string StatusFalse = "";
                        string StatusTrue = "";
                        if (!drpPageStatus)
                        {
                            StatusFalse = "checked='checked'";
                        }
                        else
                        {
                            StatusTrue = "checked='checked'";
                        }
                    }
                    <input type="radio" id="drpPageStatus0" name="drpPageStatus" value="0" @StatusFalse><label for="drpPageStatus0">Pasif</label>
                    <input type="radio" id="drpPageStatus1" name="drpPageStatus" value="1" @StatusTrue><label for="drpPageStatus1">Aktif</label>
                </div>
                <div class="ButtonPanel">
                    <input id="btnSave" name="btnSave" type="submit" class="inputbutton Add" value="@Html.Raw(btnName)" />
                </div>
            </div>
        </div>
    </div>
</form>