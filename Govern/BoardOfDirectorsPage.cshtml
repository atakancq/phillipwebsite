@{
    Layout = "_Admin.cshtml";
    MvcXmlEntities ConnXml = new MvcXmlEntities();
    int reqLangID = 0;
    int drpcategori = 0;
    if (Request.QueryString["Lang"] != null)
    {
        reqLangID = Request.QueryString["Lang"].AsInt();
    }
    if (IsPost)
    {
        if (!Request.Form["btnSort"].IsEmpty())
        {
            string[] StrSortList = Request.Form["SortItems"].Split(',');
            try
            {
                int i = 1;
                foreach (var item in StrSortList)
                {
                    if (!item.IsEmpty())
                    {
                        int getItem = Convert.ToInt32(item);
                        BoardOfDirectors itemPage = ConnXml.BoardOfDirectors.FirstOrDefault(x => x.BoardOfDirectorsID == getItem);
                        itemPage.Line = i;
                        ConnXml.Entry(itemPage).State = System.Data.Entity.EntityState.Modified;
                        ConnXml.SaveChanges();
                        i++;
                    }
                }
            }
            catch { }
            Session["Ok"] = "İşlem başarı ile gerçekleşmiştir.";
            Response.Redirect("BoardOfDirectorsPage");
        }
    }
    if (!Request.Form["drpLang"].IsEmpty())
    {
        reqLangID = Request.Form["drpLang"].AsInt();
    }
}
@functions {
    public string GetDetail(int getLangID, int drpcategori)
    {
        MvcXmlEntities ConnXml = new MvcXmlEntities();
        Setting Setting = new MvcXmlEntities().Setting.FirstOrDefault();
        string str = "";
        foreach (BoardOfDirectors itemPages in ConnXml.BoardOfDirectors.Where(x => x.Lang == getLangID).OrderBy(x => x.Line))
        {
            str += "<tr thisVal=" + itemPages.BoardOfDirectorsID + " " + (itemPages.Status == false ? "class='Yellow sssicon' title='Kayıt pasif durumda. Web sitesinde gösterilmiyor.'" : "") + ">";
            str += "<td class=\"Min grippy\"></td>";
            if (!itemPages.ImageUrl.IsEmpty())
            {
                string imgDir = "~/" + Setting.Documentdir + "/BoardOfDirectors/" + itemPages.ImageUrl;
                if (System.IO.File.Exists(Server.MapPath(imgDir)))
                {
                    str += "<td class='Min'><img src=\"" + imgDir.Replace("~/","../") + "\" width=\"100\" /></td>";
                }
                else
                {
                    str += "<td class='Min'>Resim Bulunamadı</td>";
                }
            }
            else
            {
                str += "<td class='Normal'>Resim Bulunamadı</td>";
            }
            str += "<td class='Normal'>" + itemPages.NameSurname + "</td>";
            str += "<td class='Normal'>" + itemPages.Degree + "</td>";
            str += "<td class='Normal'>";
            if (itemPages.DirectorType == 0)
            {
                str += "Yönetim Kurulu";
            }
            else if (itemPages.DirectorType == 1)
            {
                str += "Üst Yönetim";
            }
            else if (itemPages.DirectorType == 2)
            {
                str += "Yönetim & Üst Yönetim";
            }
            str += "</td>";
            str += "<td class='Big'>";
            str += "<a class='Blue' href='EditBoardOfDirectorsPage?ID=" + itemPages.BoardOfDirectorsID + "&Lang="+getLangID+"'>Düzenle</a>";
            str += "<a class='Red' onclick='return confirmDelete();' href='EditBoardOfDirectorsPage?Delete=" + itemPages.BoardOfDirectorsID + "&Lang=" + getLangID + "'>Sil</a>";
            str += "</td>";
            str += "</tr>";
        }
        return str;
    }
}
