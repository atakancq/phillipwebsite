@{
    Layout = "_Admin.cshtml";
    MvcXmlEntities ConnXml = new MvcXmlEntities();
    if (IsPost)
    {
        if (!Request.Form["btnSort"].IsEmpty())
        {
            string[] StrSortList = Request.Form["SortItems"].Split(',');
            try
            {
                int i = 1;
                foreach (var item in StrSortList)
                {
                    if (!item.IsEmpty())
                    {
                        int getItem = Convert.ToInt32(item);
                        VideoGaleryFile itemPage = ConnXml.VideoGaleryFile.FirstOrDefault(x => x.VideoGaleryFileID == getItem);
                        itemPage.Line = i;
                        ConnXml.Entry(itemPage).State = System.Data.EntityState.Modified;
                        ConnXml.SaveChanges();
                        i++;
                    }
                }
            }
            catch { }
            Session["Ok"] = "İşlem başarı ile gerçekleşmiştir.";
            Response.Redirect("VideoGaleryPageFile?GaleryID=" + Request.QueryString["GaleryID"].AsInt());
        }
    }
}
@functions
{
    public string GetDetail(int reqPhotoGaleryFile)
    {
        MvcXmlEntities ConnXml = new MvcXmlEntities();
        Setting Setting = new MvcXmlEntities().Setting.FirstOrDefault();
        string str = "";
        foreach (VideoGaleryFile itemPages in ConnXml.VideoGaleryFile.Where(x => x.VideoGaleryID == reqPhotoGaleryFile).OrderBy(x=>x.Line))
        {
            str += "<tr thisVal=" + itemPages.VideoGaleryFileID + " " + (itemPages.Status == false ? "class='Yellow sssicon' title='Kayıt pasif durumda. Web sitesinde gösterilmiyor.'" : "") + ">";
            str += "<td class=\"Min grippy\"></td>";
            if (!itemPages.VideoGaleryFileUrl.IsEmpty())
            {
                string imgDir = "~/" + Setting.Documentdir + "/VideoGalery/" + itemPages.VideoGaleryFileUrl;
                if (System.IO.File.Exists(Server.MapPath(imgDir)))
                {
                    str += "<td class='Normal'><img src=\"" + imgDir.Replace("~/", "../") + "\" width=\"100\" /></td>";
                }
                else
                {
                    str += "<td class='Normal'>Resim Bulunamadı</td>";
                }
            }
            else
            {
                str += "<td class='Normal'>Resim Bulunamadı</td>";
            }
            str += "<td class='Normal'>" + itemPages.VideoGaleryFileDescription + "</td>";
            str += "<td class='Big'>";
            str += "<a class='Blue' href='EditVideoGaleryPageFile?ID=" + itemPages.VideoGaleryFileID + "'>Düzenle</a>";
            str += "<a class='Red' href='EditVideoGaleryPageFile?Delete=" + itemPages.VideoGaleryFileID + "&GaleryID=" + itemPages.VideoGaleryID + "'>Sil</a>";
            str += "</td>";
            str += "</tr>";
        }
        return str;
    }  
}
