@{
    Layout = "_Admin.cshtml";
    MvcXmlEntities ConnXml = new MvcXmlEntities();
    int reqLangID = 0;
    int drpCountry = 0;
    if (Request.QueryString["Lang"] != null)
    {
        reqLangID = Request.QueryString["Lang"].AsInt();
    }
    if (IsPost)
    {
        if (!Request.Form["btnSort"].IsEmpty())
        {
            string[] StrSortList = Request.Form["SortItems"].Split(',');
            try
            {
                int i = 1;
                foreach (var item in StrSortList)
                {
                    if (!item.IsEmpty())
                    {
                        int getItem = Convert.ToInt32(item);
                        GlobalBranch itemPage = ConnXml.GlobalBranch.FirstOrDefault(x => x.GlobalBranchID == getItem);
                        itemPage.Line = i;
                        ConnXml.Entry(itemPage).State = System.Data.Entity.EntityState.Modified;
                        ConnXml.SaveChanges();
                        i++;
                    }
                }
            }
            catch { }
            Session["Ok"] = "İşlem başarı ile gerçekleşmiştir.";
            Response.Redirect("GlobalBranchPage");
        }
    }
    if (!Request.Form["drpLang"].IsEmpty())
    {
        reqLangID = Request.Form["drpLang"].AsInt();
    }
    if (Request.Form["drpCountry"] != null)
    {
        drpCountry = Request.Form["drpCountry"].AsInt();
    }
}
@functions
{
    public string GetDetail(int getLangID, int drpCountry)
    {
        MvcXmlEntities ConnXml = new MvcXmlEntities();
        Setting Setting = new MvcXmlEntities().Setting.FirstOrDefault();
        string str = "";
        IQueryable<Country> IqCountry = ConnXml.Country;
        foreach (GlobalBranch itemPages in ConnXml.GlobalBranch.Where(x => x.Lang == getLangID && (drpCountry != 0 ? x.CountryID == drpCountry : true)).OrderBy(x => x.Line))
        {
            str += "<tr thisVal=" + itemPages.GlobalBranchID + " " + (itemPages.Status == false ? "class='Yellow sssicon' title='Kayıt pasif durumda. Web sitesinde gösterilmiyor.'" : "") + ">";
            str += "<td class=\"Min grippy\"></td>";
            str += "<td class='Normal'>" + itemPages.ShortContent + "</td>";
            Country itemRelease = IqCountry.FirstOrDefault(x => x.CountryID == itemPages.CountryID);
            if (itemRelease != null)
            {
                str += "<td class='Normal'>" + itemRelease.Country_Name + "</td>";
            }
            else
            {
                str += "<td class='Normal'> - </td>";
            }
            str += "<td class='Normal'> " + itemPages.Phone + "</td>";
            str += "<td class='Normal'> " + itemPages.Fax + "</td>";
            str += "<td class='Big'>";
            str += "<a class='Blue' href='EditGlobalBranchPage?ID=" + itemPages.GlobalBranchID + "&Lang=" + getLangID + "'>Düzenle</a>";
            str += "<a class='Red' onclick='return confirmDelete();' href='EditGlobalBranchPage?Delete=" + itemPages.GlobalBranchID + "&Lang=" + getLangID + "'>Sil</a>";
            str += "</td>";
            str += "</tr>";
        }
        return str;
    }
}
