<div class="Title">Global Ofis Listesi</div>
<form method="post">
    <input type="hidden" id="PageName" value="" />
    <input type="hidden" id="PageNameQ" value="" />
    <input type="hidden" id="SelectedItems" name="SelectedItems" class="SelectedItems" runat="server" />
    <input type="hidden" id="PassiveItems" name="PassiveItems" class="PassiveItems" runat="server" />
    <input type="hidden" id="SortItems" name="SortItems" class="SortItems" runat="server" />
    <div class="Content">
        <div class="ButtonPanel">
            @{
                List<SelectListItem> lstCity = new List<SelectListItem>();
                lstCity.Add(new SelectListItem { Text = "Ülke Seçiniz", Value = "0" });
                foreach (City item in ConnXml.City.OrderBy(x => x.CityName))
                {
                    lstCity.Add(new SelectListItem { Value = item.CityID.ToString(), Text = item.CityName, Selected = (drpCountry == item.CityID ? true : false) });
                }
                IEnumerable<SelectListItem> DrpLstCity = lstCity;
            }
            @Html.ListBox("drpCountry", DrpLstCity, new { @class = "inputdrp", @onchange = "submit();" })
            @{
                List<SelectListItem> lstLang = new List<SelectListItem>();
                for (int i = 0; i < Shared.Lang.Length; i++)
                {
                    lstLang.Add(new SelectListItem { Value = i.ToString(), Text = Shared.toLang(i) });
                }
                lstLang.FirstOrDefault(x => x.Value == reqLangID.ToString()).Selected = true;
                IEnumerable<SelectListItem> drplstLangs = lstLang;
            }
            @Html.ListBox("drpLang", drplstLangs, new { @class = "inputdrp", @onchange = "submit();" })
            <input name="btnSort" type="submit" value="Sıralamayı Kaydet" id="btnSort" class="inputbutton Save">
            <input id="btnAdd" name="btnAdd" type="button" class="inputbutton Add" onclick="newPage(0,@reqLangID)" value="Yeni Global Ofis Ekle" />
        </div>
        <table class="GridWiew" cellpadding="5" cellspacing="0" type="sortable">
            <thead>
                <td class="Min"></td>
                <td class="Normal">Kısa Açıklama</td>
                <td class="Normal">Ülke</td>
                <td class="Normal">Telefon</td>
                <td class="Normal">Fax</td>
                <td class="Big"></td>
            </thead>
            <tbody>
                @{
                    string str = GetDetail(reqLangID, drpCountry);
                    if (!str.IsEmpty())
                    {
                        @Html.Raw(str);
                    }
                    else
                    {
                        <tr>
                            <td class='Big' colspan='15'>
                                <div class='NoneItemPage'>
                                    Global Ofis Bulunamadı<br />
                                    <br />
                                    <a href="javascript:;" onclick="newPage(0,@reqLangID)">Yeni Global Ofis Ekle</a>
                                </div>
                            </td>
                        </tr>
                    }
                }
            </tbody>
            <tfoot>
                <td class="Min"></td>
                <td class="Normal">Kısa Açıklama</td>
                <td class="Normal">Ülke</td>
                <td class="Normal">Telefon</td>
                <td class="Normal">Fax</td>
                <td class="Big"></td>
            </tfoot>
        </table>
    </div>
</form>